{% extends "crud" %}

{% import '_embed/_column' as c %}

{% block content %}
<div class="panel-body">
    {% embed "_embed/breadcrumbs" with {'page': page, 'subtitle': 'Delete'|_} %}
    {% endembed %}


    <div class="panel panel-danger">
        <div class="panel-heading"><strong>{{ 'Warning!'|_ }}!</strong> {{ 'Please confirm'|_ }}</div>
        <div class="panel-body">
            <fieldset class="form-horizontal">
                {% for field in page.provider.getFields %}
                    {% set decorator = page.decorateField(field) %}


                    {% if decorator %}
                        <div class="form-group" class="col-lg-6">
                            <label class="col-sm-2 control-label">{{ c.hcolumn(decorator) }}</label>

                            <div class="col-sm-10">
                                {{ c.column(decorator, entity, page) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </fieldset>

        </div>
        <div class="panel-footer">
            <div style="text-align:center">
                <div class="btn-group">
                    <div>

                        <a href="{{ page.urlDelete({'id':id|raw}).withQueryValue('confirm',0) }}" class="btn btn-default btn-labeled ">
                            <span class="btn-label"><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
                            {{ 'Cancel'|_ }}</a>

                        <a href="{{ page.urlDelete({'id':id|raw}).withQueryValue('confirm',1) }}" class="btn btn-danger btn-labeled ">
                            <span class="btn-label"><i class="glyphicon glyphicon glyphicon-ok"></i></span>
                            {{ 'Confirm'|_ }}</a>


                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>


            {% endblock %}

